<suite name="All Tests Suite" verbose="1">
    <test name="All Tests">
        <groups>
            <run>
                <!-- c.f. external-tests.xml -->
                <exclude name="externaldependency"/>
                <exclude name="database"/>
                <exclude name="performance"/>
