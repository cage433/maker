<?xml version="1.0" encoding="UTF-8"?>

<!--
  Spring configuration used for unit tests
-->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <import resource="classpath:services/permission.xml"/>

  <bean id="clientExecutor" class="com.trafigura.services.security.ComponentTestClientExecutor" >
     <constructor-arg index="0" value="refined.metalsadm"/>
  </bean>

  <!-- model test service -->
  <bean id="testPermissionRPCService" class="com.trafigura.services.rpc.RPCConfiguration">
    <constructor-arg index="0" type="java.lang.String" value="${trafigura.service.permission.internal}"/>
  </bean>

</beans>
