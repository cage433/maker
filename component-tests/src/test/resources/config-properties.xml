<?xml version="1.0" encoding="UTF-8"?>


<!--TODO [31 May 2011] May be able to make use of some inheritance here in the spring configuration files to prevent duplicating
some of this-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- get and report on the build info -->
    <bean id="buildProperties" class="com.trafigura.services.build.BuildInfo">
      <!-- this enforces printing out of build info on startup -->
      <constructor-arg index="0" value="true"/>
    </bean>

    <!-- property insertion -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreResourceNotFound" value="true"/>
        <!-- the below means that command -line properties will *override* settings specified in properties files -->
        <property name="systemPropertiesMode" value="2"/>
        <property name="propertiesArray">
            <list>
                <ref bean="configuredProperties"/>
            </list>
        </property>
    </bean>

    <bean id="configuredProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="http://${machine}:8080/configuration/config"/>
        <property name="ignoreResourceNotFound" value="false"/>
    </bean>
</beans>
