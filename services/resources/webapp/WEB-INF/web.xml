<?xml version="1.0"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>Starling Http Services</display-name>
    <listener>
        <listener-class>com.trafigura.services.ScalaResteasyBootstrap</listener-class>
    </listener>

    <context-param>
        <param-name>traf.webservice.factory</param-name>
        <param-value>starling.services.StarlingWebServices</param-value>
    </context-param>

    <servlet>
        <servlet-name>Resteasy</servlet-name>
        <servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Resteasy</servlet-name>
        <url-pattern>/RPC/*</url-pattern>
    </servlet-mapping>

    <!--<context-param>-->
        <!--<param-name>resteasy.scan</param-name>-->
        <!--<param-value>true</param-value>-->
    <!--</context-param>-->

    <context-param>
        <param-name>resteasy.injector.factory</param-name>
        <param-value>com.trafigura.services.ScalaInjectorFactory</param-value>
    </context-param>

    <context-param>
        <param-name>resteasy.providers</param-name>
        <param-value>
            starling.services.rpc.JsonSerializerMessageBodyWriter,
            starling.services.rpc.JsonDeserializerMessageBodyReader
        </param-value>
    </context-param>

    <context-param>
        <param-name>resteasy.servlet.mapping.prefix</param-name>
        <param-value>/RPC</param-value>
    </context-param>

    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/utils/resources/log4j.properties</param-value>
    </context-param>
</web-app>
