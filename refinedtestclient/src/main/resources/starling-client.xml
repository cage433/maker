<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <import resource="classpath:services/tradeservice.xml"/>
  <import resource="classpath:security.xml"/>
  <import resource="classpath:system-users.xml"/>

  <bean id="clientExecutor" class="com.trafigura.services.security.ClientUserExecutor" scope="prototype">
    <constructor-arg index="0" value="titan.tradecapture"/>
    <constructor-arg index="1" ref="securityComponent"/>
  </bean>

</beans>
